<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/admin_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:weightSum="7.5">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/admin_profil_pic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/adimn_cnic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="CNIC"
                            android:gravity="center"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/adimn_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Name"
                            android:gravity="center"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/adimn_phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Phone Number"
                            android:gravity="center"
                            android:textColor="#fff"/>


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/admin_decline"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Decline"
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        android:textSize="12dp"
                        android:textColor="#fff"
                        android:background="@drawable/button_background"/>

                    <Button
                        android:id="@+id/admin_allow"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Allow"
                        android:layout_margin="5dp"
                        android:visibility="visible"
                        android:textSize="12dp"
                        android:textColor="#fff"
                        android:background="@drawable/button_background"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

</LinearLayout>